<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <org.odk.collect.androidshared.ui.multiclicksafe.MultiClickSafeMaterialButton
        android:id="@+id/launch_app_button"
        style="?widgetButtonIconQuestionWidgetStyle"
        android:text="@string/launch_app"
        android:contentDescription="@string/launch_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_open_in_new_white_24" />

    <org.odk.collect.android.views.WidgetAnswerText
        android:id="@+id/widget_answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small" />

</LinearLayout>
